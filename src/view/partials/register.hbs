<main>
    <h1>Registro de nuevo usuario</h1>
    <form action="/login/register" method="post">
        <input type="text" name="user" id="user" placeholder="Nombre de Usuario">
        <input type="password" name="pass" id="password" placeholder="Contraseña">
        <input type="password" name="passr" id="password-repeat" placeholder="Repita contraseña">
        <button type="submit">Registrarse</button>
    </form>
</main>